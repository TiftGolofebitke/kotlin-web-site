<html>
<head>
<meta charset="UTF-8">
<style type='text/css'>
  <%= css_content %>

  pre, code {
      font-family: 'Courier New', monospace !important;
  }
</style>
</head>
<body>

<% content.each do |section| %>
  <% if section['content'].length > 0 %>
    <section>
      <h1 id="<%= section['id'] %>"
          class="section-title">
          <%= section['title'] %>
      </h1>

      <% section['content'].each do |page| %>
          <article id="<%= page['id'] %>" class="page-content">
            <%= page['content'] %>
          </article>
      <% end %>

    </section>
  <% end %>
<% end %>

</body>
</html>